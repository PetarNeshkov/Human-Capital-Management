@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CreateEmployeeFormModel
@{
    ViewData["Title"] = "Add Player";
}

<link rel="stylesheet" href="/css/add-department.css">

<div class="d-flex justify-content-center align-items-center vh-50">
<div class="d-block w-75">
    <h1 class="text-center mt-2">Add a new Employee</h1>
    <div class="row mt-4 mb-4">
        <div id="employee" class="player col-6 col-lg-3 game-player h-100 m-auto">
            <img id="employee-image"
                 src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_640.png"
                 alt="Employee Picture"
                 class="employee-img-top img-fluid employee-image">
            <div class="employee d-flex h-50 justify-content-center">
                <h5 class="employee-title text-center mt-2" data-toggle="tooltip">
                    Empty Name
                </h5>
            </div>
        </div>
        <form class="col-6 col-lg-9" method="post">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" type="text" class="form-control" id="name-input">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label>Role</label>
                <select asp-for="Department.Name" id="department-input" placeholder="Select a role">
                    @foreach (var department in Model.Departments)
                    {
                        <option>@department.Name</option>
                    }
                </select>
                <span asp-validation-for="Department.Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-block btn-primary mt-3 w-100">Create Player</button>
        </form>
    </div>
</div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
    
    <script>
        
   
          
     
    </script>

    <script src="~/js/populateDepartmentDropdown.js"></script>
}