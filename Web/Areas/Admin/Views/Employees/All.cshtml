@model AdminEmployeesViewModel

@{
    ViewData["Title"] = "Administration";
}
<head>
    <title>Admin</title>
</head>
<h1 class="text-center" style="font-size: 36px;">All employees</h1>
<h2 class="text-center" id="total-count"></h2>
<div class="container mt-4">
    <div class="row text-center" style="background-color: black; color: white; font-size: 18px;">
        <div class="col" style="padding: 10px 0;">Id</div>
        <div class="col" style="padding: 10px 0;">Name</div>
        <div class="col" style="padding: 10px 0;">Hire Date</div>
        <div class="col" style="padding: 10px 0;">Salary</div>
        <div class="col" style="padding: 10px 0;">Position</div>
        <div class="col" style="padding: 10px 0;">Department</div>
        <div class="col" style="padding: 10px 0;">Is Deleted</div>
        <div class="col" style="padding: 10px 0;">Actions</div>
    </div>
    <form method="post">
        @Html.AntiForgeryToken()
    </form>
    @foreach (var employee in Model.Employees)
    {
        <div id="row-employee-@employee.Id" class="row text-center" style="border-bottom: 1px solid #ccc; font-size: 16px;">
            <div class="col" style="padding: 10px 0;">@employee.Id</div>
            <div class="col" style="padding: 10px 0;">@employee.Name</div>
            <div class="col" style="padding: 10px 0;">@employee.HireDate.ToString("yyyy-MM-dd")</div>
            <div class="col" style="padding: 10px 0;">@employee.Salary.ToString("N2")</div>
            <div class="col" style="padding: 10px 0;">@employee.Position</div>
            <div class="col" style="padding: 10px 0;">@employee.DepartmentName</div>
            <div class="col" id="is-deleted-status-@employee.Id" style="padding: 10px 0;">@employee.IsDeleted</div>
            <div class="col" style="padding: 10px 0;">
                <a asp-area="Admin" asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning">Edit</a>
                @if (!employee.IsDeleted)
                {
                    <button type="button" data-id="@employee.Id" class="btn btn-danger delete-btn">Delete</button>
                }
            </div>

        </div>
    }
</div>

@await Html.PartialAsync("Partials/_Pagination", Model.Pagination)

<script src="~/js/adminActions.js"></script>