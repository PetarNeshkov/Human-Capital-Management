@model AdminEditEmployeesFormModel
@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Employee";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Edit</title>
</head>
<body>
<div class="d-flex justify-content-center align-items-center vh-50">
    <div class="d-block w-75">
        <h1 class="text-center mt-2">Edit Employee</h1>
        <div class="row mt-4 mb-4">
            <div id="employee" class="col-6 col-lg-3 h-100 m-auto">
                <img id="employee-image"
                     src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_640.png"
                     alt="Employee Picture"
                     class="employee-img-top img-fluid employee-image">
                <div class="employee d-flex h-50 justify-content-center">
                    <h5 class="employee-title text-center mt-2" data-toggle="tooltip">
                        Empty Name
                    </h5>
                </div>
            </div>
            <form class="col-6 col-lg-9" asp-action="Edit" asp-area="Admin" method="post">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="name-input">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label>Role</label>
                    <select asp-for="DepartmentId" id="department-input" placeholder="Select a role"></select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Salary">Salary</label>
                    <input asp-for="Salary" type="number" class="form-control" min="0" id="salary-input">
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="HireDate">Hire Date</label>
                    <input asp-for="HireDate"
                           type="date"
                           class="form-control"
                           id="hire-date-input">
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Position">Position</label>
                    <input asp-for="Position" class="form-control" id="position-input">
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-block btn-primary mt-3 w-100">Edit Employee</button>
            </form>
        </div>
    </div>
</div>
</body>
</html>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
    <script src="~/js/populateDepartmentDropdown.js"></script>
}