@page

@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control"/>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control mt-2" placeholder="Password..."/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group mt-2">
                            <div class="checkbox-group">
                                <input type="checkbox" asp-for="Input.RememberMe"/>
                                <label asp-for="Input.RememberMe">
                                    <span class="check"></span>
                                    <span class="box"></span>
                                    <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col ml-auto mt-2 text-right">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                        </div>
                    </div>

                </div>
                <div class="form-group text-center mt-3 d-grid gap-2">
                    <button type="submit" class="btn btn-secondary btn-block bg-primary text-white">Log in</button>
                </div>
                <p class="text-center mt-2">Don’t have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="tt-underline">Sign up here</a></p>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}